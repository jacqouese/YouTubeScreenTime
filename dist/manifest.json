{
    "manifest_version": 2,
    "name": "YouTube Screen Time",
    "description": "Track your time spent on YouTube",
    "version": "1.0",
    "icons": {
        "16": "icons/img.jpg",
        "48": "icons/img.jpg",
        "128": "icons/img.jpg"
    },
    "browser_action": {
        "default_popup": "popup/popup.html",
        "default_title": "Check your screen time",
        "default_icon": {
            "16": "icons/img.jpg",
            "48": "icons/img.jpg",
            "128": "icons/img.jpg"
        }
    },
    "background": {
        "scripts": ["background/background.js"],
        "persistent": false
      },
    "content_scripts": [{
        "matches": ["https://www.youtube.com/*"],
        "js": ["content/content.js"]
    }],
    "permissions": ["storage"]
}